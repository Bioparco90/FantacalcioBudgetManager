@page "/"
@page "/home"

<RadzenDataGrid Data="@teams" AllowColumnResize="true" @bind-Value=@teams>
    <Columns>
        <RadzenDataGridColumn Property="@nameof(Team.Name)" Title="Team" />
        <RadzenDataGridColumn>
            <Template Context="data">
                <RadzenButton Icon="delete" Click="@(() => DeleteItem(data))" />
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

<RadzenContent id="add-team">
    <RadzenTextBox Placeholder="Team name" @bind-Value="@TeamName" />
    <RadzenButton Text="Add team" Click="AddTeam" />
</RadzenContent>

