@page "/test"

<RadzenText TextStyle="TextStyle.H3" Text="@text" />
<RadzenButton Text="Click me" Click="@ClickedBtn" />

@if (changePhoto)
{
    <RadzenAlert AlertStyle="AlertStyle.Success" Title="Success" AllowClose="true" Close="ClickedBtn"/>
}

@code {
    string text = "Hi";
    bool changePhoto;

    public async Task ClickedBtn()
    {
        await Task.Run(() => changePhoto = !changePhoto);
    }
}
